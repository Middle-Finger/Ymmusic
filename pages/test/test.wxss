/* 歌曲列表样式 */

#banner{
  height: 280rpx;
}
#banner image{
  width: 100%;
  height: 100%;
  display: block;
}
.list_wrap{
  width: 100%;
  height: 180rpx;
  
  box-shadow: 0rpx 1rpx 10rpx #3334;
  
}
.list_wrap view{
  float: left;
}
.list_wrap .list_l{
  width: 150rpx;
  height: 150rpx;
  
margin:10rpx 40rpx;
}
.list_wrap .list_c{
  width: 300rpx;
  height: 160rpx;

  text-align: center;
  padding-top: 10rpx;
  margin:10rpx 0 0 0;

}
.list_wrap .list_r{
  width: 160rpx;
  height: 160rpx;


}
.list_l image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 23rpx;
   

  }
  .list_c view{
    width: 360rpx;
    /* 文本不换行 */
    white-space: nowrap;
    /* 文本溢出部分省略 */
    overflow:hidden;
    text-overflow: ellipsis;
  }
  .list_c .musicName{
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
  }
  .list_c .name{
    font-size: 26rpx;
    color:#555;
    
  }
.list_r image{
  width: 60rpx;
  height: 60rpx;
  padding:60rpx 10rpx 40rpx 80rpx;
}


